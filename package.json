{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "sugardaddydiabetes",
  "title": "SugarDaddyDiabetes",
  "description": "Monitor glucose data from Freestyle Libre 2 & 3 devices through LibreView integration",
  "icon": "extension-icon.png",
  "author": "authormatic",
  "owner": "magi",
  "categories": [
    "Data",
    "Healthcare"
  ],
  "keywords": [
    "diabetes",
    "glucose",
    "health",
    "libre",
    "libreview"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "menubar",
      "title": "Glucose Menu Bar",
      "description": "Show latest glucose reading in menu bar",
      "mode": "menu-bar",
      "interval": "5m",
      "persistent": true
    },
    {
      "name": "dashboard",
      "title": "Open Dashboard",
      "description": "Shows detailed glucose statistics and charts",
      "mode": "view"
    }
  ],
  "preferences": [
    {
      "name": "username",
      "type": "textfield",
      "required": true,
      "title": "LibreView Username",
      "description": "Your LibreView account username/email",
      "placeholder": "email@example.com"
    },
    {
      "name": "password",
      "type": "password",
      "required": true,
      "title": "LibreView Password",
      "description": "Your LibreView account password",
      "placeholder": "password"
    },
    {
      "name": "unit",
      "type": "dropdown",
      "required": true,
      "title": "Glucose Unit",
      "description": "Choose between mmol/L and mg/dL",
      "data": [
        {
          "title": "mmol/L",
          "value": "mmol"
        },
        {
          "title": "mg/dL",
          "value": "mgdl"
        }
      ],
      "default": "mmol"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.67.1",
    "@raycast/utils": "^1.4.8",
    "date-fns": "^2.30.0",
    "node-fetch": "^3.3.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/d3": "^7.4.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.8.10",
    "@types/react": "^18.2.27",
    "eslint": "^8.51.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.2.5",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  }
}
